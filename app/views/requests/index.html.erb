<div class="background-container">
  <div class="dashboard-background">
    <h1>Dashboard</h1>
    <div class="index-container">
      <% @requests.each do |r| %>
      <div class="card card-requests">
        <h4 class="card-header">Advisor: <%= r.advisor.first_name.capitalize %> <%= r.advisor.last_name.capitalize unless r.advisor.last_name.nil? %> </h4>
        <div class="dashboard-content">
          <p><strong>What you are willing to change:</strong></p>
          <p><%= r.content unless r.content.nil? %></p>
          <%= link_to 'Chat', chat_request_path(r) %>
          <%= link_to 'Leave a Review', show_advisor_user_path(r.advisor, r_id: r.id) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
