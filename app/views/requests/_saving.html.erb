<%= simple_form_for :content, url: set_content_requests_path, method: :post do |f| %>
      <div class="form-container">
        <div class="p-3 mb-0.5">
          <div class="slidecontainer">
            <div class="form-headers">What is your monthly income?</div>
              <input type="range" min="1" max="6000" value="500" class="slider" id="myRange-saving" name="content[monthly_income]">
              <br>
              <br>
              <p>Income: £<span id="demo-saving"></span></p>
          </div>
        </div>
        <div class="p-3 mb-0.5">
          <%= f.input :fixed_expenses, label: "What are your fixed expenses?" %>
        </div>
        <div class="p-3 mb-0.5">
          <%= f.input :savings_goal, label: "What are your savings goals? (ex. £1000, 2 months' salary)" %>
        </div>
        <div class="p-3 mb-0.5">
          <div class="form-headers">Do you have a bank account?</div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Yes" name="content[bank_account]">
              <label class="form-check-label" for="inlineCheckbox1">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="No" name="content[bank_account]">
              <label class="form-check-label" for="inlineCheckbox2">No</label>
            </div>
            <div class="p-3 mb-0.5">
              <%= f.input :content, label:  "What are you willing to change?" %>
            </div>
            <div class="d-flex justify-content-center">
              <%= f.submit 'submit',  class: 'btn btn-danger btn-md' %>
        </div>
      </div>
    <% end %>

<script>

var sliderSaving = document.getElementById("myRange-saving");
var saving = document.getElementById("demo-saving");
saving.innerHTML = sliderSaving.value;

sliderSaving.oninput = function() {
saving.innerHTML = this.value;
}
</script>
